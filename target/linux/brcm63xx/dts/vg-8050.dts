&sleds0 {
	status = "ok";

	inet_red {
		compatible = "serial-led";
		num = <0x2>; /* BP_SERIAL_GPIO_2 */
		label = "VG-8050:red:inet";
	};
	power_red {
		compatible = "serial-led";
		num = <0x3>; /* BP_SERIAL_GPIO_3 */
		label = "VG-8050:red:power";
	};
	power_green {
		compatible = "serial-led";
		num = <0x6>; /* BP_SERIAL_GPIO_6 */
		label = "VG-8050:green:power";
		default-state = "on";
	};
	wps_green {
		compatible = "serial-led";
		num = <0x7>; /* BP_SERIAL_GPIO_7 */
		label = "VG-8050:green:wps";
	};
};

&sleds1 {
	status = "ok";

	inet_green {
		compatible = "serial-led";
		num = <0x0>; /* BP_SERIAL_GPIO_8 */
		label = "VG-8050:green:inet";
	};
	voip_green {
		compatible = "serial-led";
		num = <0x2>; /* BP_SERIAL_GPIO_10 */
		label = "VG-8050:green:voip";
	};
	voip_red {
		compatible = "serial-led";
		num = <0x4>; /* BP_SERIAL_GPIO_12 */
		label = "VG-8050:red:voip";
	};
	wps_red {
		compatible = "serial-led";
		num = <0x6>; /* BP_SERIAL_GPIO_14 */
		label = "VG-8050:red:wps";
	};
};
